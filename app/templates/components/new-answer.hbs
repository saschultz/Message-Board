{{#if addNewAnswer}}
  <p>Answer your fellow developer</p>
  <form>
    <div class="form-group">
      <label for="answer">Answer</label>
      {{input value=answer id="answer"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <button {{action 'saveAnswer'}}>Answer</button>
  </form>
{{else}}
  <button {{action 'answerFormShow'}}>Answer</button>
{{/if}}
